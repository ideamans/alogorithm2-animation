---
import Layout from '../layouts/Layout.astro'
import Alogorithm2Animation from 'alogorithm2-animation/astro'
---

<Layout title="Alogorithm2 Animation - Astro Example">
  <main>
    <h1>Alogorithm2 Animation - Astro Example</h1>
    
    <div class="grid">
      <div class="card">
        <h2>Morph Mode</h2>
        <Alogorithm2Animation 
          width={300} 
          height={300} 
          mode="morph"
          duration={2000}
          interval={4000}
        />
      </div>

      <div class="card">
        <h2>Fly Mode</h2>
        <Alogorithm2Animation 
          width={300} 
          height={300} 
          mode="fly"
          duration={2000}
          interval={4000}
        />
      </div>
    </div>

    <div class="info">
      <p>Using Alogorithm2Animation from ../dist/astro</p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    max-width: 1200px;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 3rem;
    color: #333;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    text-align: center;
  }

  .card h2 {
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: #555;
  }

  .info {
    text-align: center;
    color: #666;
    font-style: italic;
  }
</style>